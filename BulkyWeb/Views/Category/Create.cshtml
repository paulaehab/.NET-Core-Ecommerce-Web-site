@model Category 
<form method="post">

    <div class="border p-3 mt-4" >
        <div class="row pb-2">
            <h2 class="text-primary">Create Category</h2>

        </div>
        <div asp-validation-summary="ModelOnly"></div>
        <div class="mb-3 row p-1">
            <label asp-for="Name" class="p-0"></label>
            <input asp-for="Name" type="text" class="form-control"/>
            <span asp-validation-for="Name" class="text-danger"></span>

        </div>
        <div class="mb-3 row p-1" >
            <label asp-for="DisplayOrder" class="p-0"> </label>
            <input asp-for="DisplayOrder" type="text" class="form-control" />
            <span asp-validation-for="DisplayOrder" class="text-danger"></span>

        </div>
        <div class="row">
        <div class="col-6 col-md-3">
            <button type="submt" class="btn btn-primary form-control" style="width:150px">
                Create
            </button>

        </div>
            <div class="col-6 col-md-3">
                <a asp-controller="Category" asp-action="Index" class="btn btn-secondry from-control" style="width:150px"> Back To List</a>
            </div>
     
        </div>
    </div>

</form>
@* add validation in the client side using built-in jquery to prevent browser from loading while you add the category  
 *@
@section Scripts{
    <partial name="_ValidationScriptsPartial" />
}